<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <TabPane prefHeight="506.0" prefWidth="461.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Input Tab">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="inputField" prefHeight="378.0" prefWidth="354.0" />
                        <Button fx:id="fromFile" layoutX="366.0" layoutY="26.0" mnemonicParsing="false" text="From File" />
                        <Button fx:id="apply" layoutX="391.0" layoutY="423.0" mnemonicParsing="false" text="Apply" />
                        <TextField fx:id="tagField" layoutX="14.0" layoutY="423.0" />
                        <Button fx:id="addTag" layoutX="196.0" layoutY="423.0" mnemonicParsing="false" text="Add tag" />
                        <Button fx:id="reset" layoutX="271.0" layoutY="423.0" mnemonicParsing="false" text="Reset" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Output Tab">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="outputField" layoutY="6.0" prefHeight="470.0" prefWidth="462.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</GridPane>
